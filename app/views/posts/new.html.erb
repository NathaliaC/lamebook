<% if @post.errors.present? %>
  <% @post.errors.full_messages.each do |msg| %>
    <p class="py-2 px-3 bg-red-300 mb-5 text-red-500 font-medium rounded-lg inline-block">
      <%= msg %>
    </p>
  <% end %>
<% end %>
<h1 class="font-bold text-2xl">Novo Post</h1>
<div class="mt-4">
  <%= render "form", post: @post %>
</div>


